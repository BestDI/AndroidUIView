<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:drakeet="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center">

            <me.drakeet.uiview.UIButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:background="@mipmap/ic_launcher"
                drakeet:radius="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/t1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center">

            <me.drakeet.uiview.UIButton
                android:layout_width="64dp"
                android:layout_height="32dp"
                android:layout_margin="16dp"
                android:background="@android:color/transparent"
                drakeet:alpha_pressed="40"
                drakeet:color_pressed="#0303ff"
                drakeet:color_unpressed="#8aacee"
                android:textSize="10sp"
                android:text="UIButton"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/t0"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center">

            <me.drakeet.uiview.UIButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:background="@mipmap/avatar"
                drakeet:shape_type="round"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/t2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center">

            <me.drakeet.uiview.UIImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                drakeet:shape_type="round"
                android:src="@mipmap/avatar2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/t3"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center">

            <me.drakeet.uiview.UIRippleButton
                android:layout_width="64dp"
                android:layout_height="32dp"
                android:layout_margin="16dp"
                android:textSize="10sp"
                drakeet:ripple_color="#ffffff"
                drakeet:color_unpressed="#8aacee"
                drakeet:ripple_duration="500"
                drakeet:shape_type="rectangle"
                android:text="Ripple"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/t4"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center">

            <me.drakeet.uiview.UIRippleButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:textSize="9sp"
                drakeet:ripple_color="#eeeeee"
                drakeet:ripple_duration="500"
                drakeet:shape_type="round"
                drakeet:color_unpressed="#f44336"
                android:text="Circle UIRippleButton"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/t5"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
